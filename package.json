{
  "name": "willismd",
  "version": "0.9.1",
  "description": "A cross-platform markdown editor with live preview, built with Electron and React.",
  "main": "src/main/main.js",
  "scripts": {
    "start": "NODE_ENV=development npm run dev",
    "dev": "npm run dev:renderer & npm run dev:electron",
    "dev:renderer": "webpack serve --mode development",
    "dev:electron": "sleep 10 && electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "webpack --mode production",
    "build:electron": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "markdown",
    "editor",
    "electron",
    "react",
    "cross-platform"
  ],
  "author": {
    "name": "Stacy Lacy",
    "email": "stacy@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stacylacy/willisMD.git"
  },
  "homepage": "https://github.com/stacylacy/willisMD",
  "bugs": {
    "url": "https://github.com/stacylacy/willisMD/issues"
  },
  "dependencies": {
    "@babel/runtime": "^7.27.6",
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/basic-setup": "^0.20.0",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/highlight": "^0.19.8",
    "@codemirror/lang-markdown": "^6.3.3",
    "@codemirror/language": "^6.11.1",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.37.2",
    "@uiw/codemirror-theme-github": "^4.23.13",
    "archiver": "^7.0.1",
    "codemirror": "^6.0.2",
    "docx": "^9.5.1",
    "dompurify": "^3.2.6",
    "html-to-docx": "^1.8.0",
    "marked": "^15.0.12",
    "mermaid": "^11.9.0",
    "officegen": "^0.6.5",
    "puppeteer": "^24.10.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "turndown": "^7.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/plugin-transform-runtime": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "babel-loader": "^9.2.1",
    "css-loader": "^7.1.2",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "esbuild-loader": "^4.3.0",
    "html-webpack-plugin": "^5.6.3",
    "path-browserify": "^1.0.1",
    "style-loader": "^4.0.0",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "build": {
    "appId": "com.willisMD.app",
    "productName": "willisMD",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "src/preload/**/*",
      "public/**/*",
      "templates/**/*",
      "!node_modules/puppeteer/.local-chromium/**/*"
    ],
    "asarUnpack": [
      "templates/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "icon": "public/icon.png"
    }
  }
}
